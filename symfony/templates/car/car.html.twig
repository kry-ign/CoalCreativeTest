{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}


    <h1>Add new car:</h1>
    <div id="template">
        <div style="text-align: left">
            {{ form_start(createForm) }}
            {{ form_widget(createForm) }}
            {{ form_end(createForm) }}
        </div>
    </div>
{#    {{ form_widget(createForm) }}#}
<h1>List</h1>

<table>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Model</td>
        <td>Year of production</td>
        <td>Delete</td>
        <td>Edit</td>
    </tr>
    <a href="{{ path('car_view',{'sortBy': 'name', 'sortOrder': 'asc'}) }}" class="button">SortByNameAsc</a></br>
    <a href="{{ path('car_view',{'sortBy': 'name', 'sortOrder': 'desc'}) }}" class="button">SortByNameDesc</a></br>
    <a href="{{ path('car_view',{'sortBy': 'year', 'sortOrder': 'asc'}) }}" class="button">SortByYearAsc</a></br>
    <a href="{{ path('car_view',{'sortBy': 'year', 'sortOrder': 'desc'}) }}" class="button">SortByYearDesc</a></br>
    {% for car in cars %}
    <tr>
        <td>{{ car.id }}</td>
        <td>{{ car.name }}</td>
        <td>{{ car.model }}</td>
        <td>{{ car.year|date("m/d/Y") }}</td>
        <td><a href="{{ path('car_delete',{'carId': car.id}) }}" class="button">Delete</a>
        <td><a href="{{ path('car_edit',{'carId': car.id}) }}" class="button">Edit</a>

                </tr>
                {% endfor %}
            </table>

        {% endblock %}

